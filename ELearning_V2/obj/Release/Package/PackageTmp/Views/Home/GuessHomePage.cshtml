@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_LayoutLearnIT.cshtml";
}

<section class="home_banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h3>We Ensure better education <br />for a better world</h3>
                <p>In the history of modern astronomy, there is probably no one greater leap forward than the building and launch of the space telescope known as the Hubble.</p>
                <a class="main_btn" href="#">Get Started</a>
            </div>
        </div>
    </div>
</section>
<div ng-app="HomeApp" ng-controller="HomeController">
    <section class="courses_area p_120">
        <div class="container">
            <div class="main_title">
                <h2>Khóa học miễn phí</h2>
                <p>Các khoá học miễn phí được nhiều người tham gia</p>
            </div>
            <div class="row courses_inner">
                <div class="grid_inner col-md-12">
                    <div class="grid_item wd33" ng-repeat="c in Courses">
                        <div class="courses_item">
                            <img height="270" src="~/Content/img/ClassImage/{{c.Image}}" alt="">
                            <div class="hover_text">
                                <a class="cat">Free</a>
                                <a href="/Lop/ViewCourse/{{c.ID}}"><h4>{{c.Name}}</h4></a>
                                <ul class="list">
                                    <li ng-if="c.Type != 3"><a href="#"><i class="lnr lnr-users"></i> {{c.NumOfPeo}}/{{c.Capacity}}</a></li>
                                    <li ng-if="c.Type == 3"><a href="#"><i class="lnr lnr-users"></i> {{c.NumOfPeo}}</a></li>
                                    <li><a href="#"><i class="lnr lnr-bubble"></i> {{c.Comments}}</a></li>
                                    <li><a href="#"><i class="lnr lnr-user"></i>{{c.Username}}</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </section>

    <section class="team_area p_120">
        <div class="container">
            <div class="main_title">
                <h2>Giảng viên nổi bật</h2>
                <p>Những giảng viên có các lớp học được đánh giá cao nhất</p>
            </div>
            <div class="row team_inner">
                <div class="col-lg-3 col-sm-6" ng-repeat="t in TopTeachers">
                    <div class="team_item">
                        <div class="team_img">
                            <img style="width:250px;height:250px" ng-if="t.Image != null" class="rounded-circle" src="~/Content/img/UserImage/{{t.Image}}" alt="{{t.Fullname}}">
                            <img style="width:250px;height:250px" ng-if="t.Image == null" class="rounded-circle" src="~/Content/img/UserImage/Default.png" alt="{{t.Fullname}}">

                            <div class="hover">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="team_name">
                            <h4>{{t.Fullname}}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="latest_blog_area p_120">
        <div class="container">
            <div class="main_title">
                <h2>Bài giảng mở</h2>
                <p>Những bài giảng mở, có lượt xem nhiều nhất</p>
            </div>
            <div class="row latest_blog_inner">
                <div class="col-lg-3 col-md-6" ng-repeat="l in PubLessions">
                    <div class="l_blog_item">
                        <img class="img-fluid" style="height:150px" ng-if="l.Image != null" src="~/Content/img/LessionImage/{{l.Image}}" alt="">
                        <img class="img-fluid" style="height:150px" ng-if="l.Image == null" src="~/Content/img/LessionImage/Default.png" alt="">
                        <a class="date" href="#">{{l.CreateDate | date:"dd/MM/yyyy HH:mm"}}</a>
                        <a href="/Lop/LessionDetail/{{l.ID}}/?CourseID={{l.CourseID}}"><h4>{{l.Name}}</h4></a>
                        <div ng-bind-html="l.Content" style="max-height:150px;overflow:hidden"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Pub/Home.js"></script>
