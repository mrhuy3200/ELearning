@model ELearning_V2.Areas.GV.Models.BaiGiangModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/GV/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tạo bài giảng mới</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <div class="col-md-6">
                <label>Tên bài giảng </label>
                <div>
                    @Html.EditorFor(model => model.TenBaiGiang, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên bài giảng" } })
                    <label class="text-danger">@Html.ValidationMessageFor(model => model.TenBaiGiang)</label>
                </div>
            </div>
            <div class="col-md-6">
                <label>URL: </label>
                <div>
                    @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control", @placeholder = "Liên kết video" } })
                    <label class="text-danger">@Html.ValidationMessageFor(model => model.URL)</label>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Nội dung</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NoiDung, new { id = "NoiDung" })
                <label class="text-danger">@Html.ValidationMessageFor(model => model.NoiDung)</label>
                <script src="~/Assets/Plugin/ckeditor/ckeditor.js"></script>
                <script>

                    CKEDITOR.replace("NoiDung");

                </script>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="#" onclick="location.href='@Url.Action("QuanLyBaiGiang","BaiGiang")'">Quay lại</a>
</div>

