@model ELearning_V2.Areas.GV.Models.BaiGiangModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/GV/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>BaiGiang</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaBaiGiang)

        <div class="form-group">
            <label>Tên bài giảng</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenBaiGiang, new { htmlAttributes = new { @class = "form-control" } })
                <label class="text-danger">@Html.ValidationMessageFor(model => model.TenBaiGiang)</label>
            </div>
        </div>


        <div class="form-group">
            <label>Nội dung</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                <label class="text-danger">@Html.ValidationMessageFor(model => model.NoiDung)</label>
                <script src="/Assets/Plugin/ckeditor/ckeditor.js"></script>
                <script>

                    CKEDITOR.replace("NoiDung");

                </script>
            </div>
        </div>



        <div class="form-group">
            <label>URL</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
                <label class="text-danger">@Html.ValidationMessageFor(model => model.URL)</label>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "QuanLyBaiGiang")
</div>
