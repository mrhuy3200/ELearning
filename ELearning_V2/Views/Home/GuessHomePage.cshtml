                                    <a class="cat" href="#">@(Model.ElementAt(i).Price * 1000) đ</a>
                                    <a href="#"><h4>@Model.ElementAt(i).Name</h4></a>
                                    <ul class="list">
                                        <li><a href="#"><i class="lnr lnr-users"></i>@Model.ElementAt(i).CourseDetails.Count()</a></li>
                                        <li><a href="#"><i class="lnr lnr-bubble"></i> 35</a></li>
                                        <li><a href="#"><i class="lnr lnr-user"></i>@Model.ElementAt(i).NguoiDung.HoVaTen</a></li>
                                    </ul>
                                </div>
                            </div>
