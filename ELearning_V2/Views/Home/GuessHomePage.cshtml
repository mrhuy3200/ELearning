        </div>
        <div class="row courses_inner">
            <div class="grid_inner">
                @{
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <div class="grid_item wd44">
                            <div class="courses_item">
                                <img src="~/Content/img/ClassImage/@Model.ElementAt(i).Image" alt="">
